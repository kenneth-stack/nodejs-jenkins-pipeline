pipeline {
    agent any

    environment {
        NODE_VERSION = '18.x'
        EC2_USER = 'ubuntu'
        EC2_HOST = credentials('ec2-host-ip')  // Use Jenkins credentials
        SSH_KEY = credentials('ec2-ssh-key')   // Use Jenkins credentials
        APP_DIR = '/var/www/nodejs-jenkins-pipeline'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/kenneth-stack/nodejs-jenkins-pipeline.git'
            }
        }

        stage('Install Dependencies Locally') {
            steps {
                script {
                    sh 'curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.4/install.sh | bash'
                    sh '. ~/.nvm/nvm.sh && nvm install ${NODE_VERSION}'
                    sh '. ~/.nvm/nvm.sh && nvm use ${NODE_VERSION} && npm install'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh '. ~/.nvm/nvm.sh && nvm use ${NODE_VERSION} && npm test'
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                script {
                    sh """
                    scp -i ${SSH_KEY} -r * ${EC2_USER}@${EC2_HOST}:${APP_DIR}
                    """

                    sh """
                    ssh -i ${SSH_KEY} ${EC2_USER}@${EC2_HOST} << EOF
                    cd ${APP_DIR}
                    . ~/.nvm/nvm.sh && nvm install ${NODE_VERSION}
                    . ~/.nvm/nvm.sh && nvm use ${NODE_VERSION} && npm install --production
                    pm2 stop all || true
                    pm2 start index.js --name "node-app"
                    EOF
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
